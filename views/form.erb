<link href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css" media="all" rel="stylesheet" type="text/css">
<style>
  body {
    padding-top: 40px;
  }
</style>

<div class="container" >
  <h2 class="text-center"> Onepay Demo </h2>
  <br/>
  <form method="post" action="/order" class="form-horizontal">
    <div class="form-group">
      <label for="merchant" class="col-sm-2 control-label"> Merchant </label>
      <div class="col-sm-10">
        <input type="text" id="merchant" name="merchant" value=<%= "#{@merchant}" %> class="form-control"/>
      </div>
    </div>

    <div class="form-group">
      <label for="merchant_ref" class="col-sm-2 control-label"> Merchant Ref </label>
      <div class="col-sm-10">
        <input type="text" id="merchant_ref" name="merchant_ref" value=<%= "#{@merchant_ref}" %> class="form-control"/>
      </div>
    </div>

    <div class="form-group">
      <label for="access_code" class="col-sm-2 control-label"> Access Code </label>
      <div class="col-sm-10">
        <input type="text" id="access_code" name="access_code" value=<%= "#{@access_code}" %> class="form-control"/>
      </div>
    </div>

    <div class="form-group">
      <label for="amount" class="col-sm-2 control-label"> Amount </label>
      <div class="col-sm-10">
        <input id="amount" name="amount" type="text" value=<%= "#{@amount}" %> class="form-control"/>
      </div>
    </div>

    <div class="form-group">
      <label for="currency" class="col-sm-2 control-label"> Currency </label>
      <div class="col-sm-10">
        <input id="currency" name="currency" type="text" value=<%= "#{@currency}" %> class="form-control"/>
      </div>
    </div>

    <div class="form-group">
      <label for="order_info" class="col-sm-2 control-label"> Order Info </label>
      <div class="col-sm-10">
        <input type="text" id="order_info" name="order_info" value=<%= "#{@order_info}" %> class="form-control"/>
      </div>
    </div>

    <div class="form-group">
      <label for="customer_email" class="col-sm-2 control-label"> Customer Email </label>
      <div class="col-sm-10">
        <input type="text" id="customer_email" name="customer_email" value=<%= "#{@customer_email}" %> class="form-control"/>
      </div>
    </div>

    <div class="form-group">
      <label for="ip_address" class="col-sm-2 control-label"> IP Address </label>
      <div class="col-sm-10">
        <input type="text" id="ip_address" name="ip_address" value=<%= "#{@ip_address}" %> class="form-control"/>
      </div>
    </div>

    <div class="form-group">
      <label for="language" class="col-sm-2 control-label"> Language </label>
      <div class="col-sm-10">
        <input type="text" id="language" name="language" value=<%= "#{@language}" %> class="form-control"/>
      </div>
    </div>

    <div class="form-group">
      <label for="return_url" class="col-sm-2 control-label"> Return URL </label>
      <div class="col-sm-10">
        <input type="text" id="return_url" name="return_url" value=<%= "#{@return_url}" %> class="form-control"/>
      </div>
    </div>

    <div class="text-center">
      <button type="Submit" name="btnSubmit" value="Submit" id="btnSubmit" class="btn btn-primary"/> Submit </button>
    </div>
  </form>
</div>
